	display: block;
	border-color: transparent transparent transparent #dbdbdb;
  border-style: solid;
  border-width: 4px;
  height:0;
  width:0;
  position:absolute;
  right: 12px;
  top: 10px;	
	}
.ie6 .widget-linklist .arrow{ display: none; }		
.widget-linklist ul a:hover{
	background: #fff;
	}
.widget-linklist a:hover .arrow{
	border-left-color: #999;
	}	
	
	
	
/** 
 * Left Col > Ads
 */

.widget-ad{ margin: 0 0 15px 0; }	
.widget-ad img{ display: block; }



