	}


/**
 * Structure
 */

.wrapper{
	width: 960px;
	margin: 0 auto;
	}
	
.col-browse{
	float: left;
	width: 230px;
	}
	
.col-content{
	float: right;
	width: 710px;
	}

#main-wrapper{
	background: #fff;
	padding: 0 0 30px 0;
	}
	
#main{
	position: relative;
	z-index: 1;
	}



/**
 * Header
 */

#header-wrapper{
	background: {{ settings.header_colour }} url(header-gradient-white.png) 0 0 repeat-x;
	border-bottom: solid 1px #262f33;
	}
.ie6 #header-wrapper{ background-image: none; }	
#header{
	padding: 20px 0 15px 0;
	}
	
#site-title{
	float: left;
	font-family: {{ settings.header_font }};
	font-size: 2.1538em; /* 28 / 13 */
	line-height: 1;
	font-weight: bold;
	color: #fff;
	}
#site-title a{ 
	color: #fff; 
	text-decoration: none; 
	}
#site-title a:hover{ 
	color: {{ settings.link_active_colour }}; 
	}



/**
 * Header > Search
 */

#header #search{
	float: right;
	padding: 4px 0 0 0;
	}
	
.search-input{
	float: left;
	background: #fff;
	border: none;
	width: 100px; height: 25px; 
	color: #1b3440;
	font-size: 0.923em; /* 12/13 */
	padding: 0 10px;
	-webkit-transition: width .25s ease-in;
	-moz-transition: width .25s ease-in;
	transition: width .25s ease-in;		
	-moz-border-radius: 8px 0 0 8px; -webkit-border-radius: 8px 0 0 8px; border-radius: 8px 0 0 8px;
	}	
.search-input:focus{ 
	width: 150px; 
	outline: none;
	}
	
#header #search .search-input{
	line-height: 25px;
	}	
	
.search-submit{
	cursor: pointer;
	float: left;
	width: 27px;
	height: 25px;
	line-height: 999px; text-indent: -900em; overflow: hidden; font-size: 0;  /* hide text inside input (a lot of diff ways) */
	background: {{ settings.link_colour }} url(search-btn-white.png) 0 0 no-repeat;
	-moz-border-radius: 0 8px 8px 0; -webkit-border-radius: 0 8px 8px 0; border-radius: 0 8px 8px 0;
	color: #fff;
	border: none;
	}
.search-submit:hover{
	background-color: {{ settings.link_hover_colour }};
	}
.ie6 .search-submit{ 
	background-image: none; 
	width: auto;
	line-height: 1em;
	text-indent: 0;
	font-size: 13px;
	}



/**
 * Header > Top Menu (Nav + Cart)
 */	

#top-menu{
	color: #fff;
	position: relative;
	z-index: 50;
	margin-bottom: 30px;
	font-size: 0.923em; /* 12/13 */	
	background: {{ settings.topmenu_colour }};
	-moz-border-radius: 0 0 8px 8px; -webkit-border-radius: 0 0 8px 8px; border-radius: 0 0 8px 8px;
	} 
.top-menu p{ 
	margin-bottom: 0; 
	line-height: 1 
	}
.top-menu a{ 
	color: {{ settings.link_active_colour }}; 
	}	
.top-menu a:hover{ 
	color: #fff; 
	}

.top-menu ul{
	margin: 0;
	list-style: none;
	padding: 7px 10px;
	}
.top-menu li{
	margin: 0;
	float: left;
	}	
	
.top-menu > li{
	position: relative;
	z-index: 50;
	}

#nav{ 
	float: left; 
	width: 600px;
	}
#nav a{
	display: block;
	position: relative;
	text-decoration: none;
	padding: 4px 6px;
	margin: 0 10px 0 0;
	z-index: 1;
	-moz-border-radius: 4px; -webkit-border-radius: 4px; border-radius: 4px;	
	}	
#nav a:hover,
#nav a.active{
	color: #1b3440;
	background: {{ settings.link_active_colour }} url(gradient-white-30.png) 0 -10px repeat-x;
	}
.ie6 #nav a:hover,
.ie6 #nav a.active{
	background-image: none;
	}
#nav a.active{
	-moz-border-radius: 4px 4px 0 0; -webkit-border-radius: 4px 4px 0 0; border-radius: 4px 4px 0 0;	
	}	
		
#nav .has-dropdown{ position: relative; z-index: 75; }
#nav .has-dropdown a{ padding-right: 20px; }
#top-menu .has-dropdown ul{
	display: none;
	position: absolute;
	z-index: 100;	
	top: 22px;
	left: 0;
	width: 150px;
	padding: 6px;
	background: {{ settings.link_active_colour }};
	border: solid 1px #fff;
	border-top: none;
	-moz-border-radius: 0 4px 4px 4px; -webkit-border-radius: 0 4px 4px 4px; border-radius: 0 4px 4px 4px;	
	}	
#top-menu .has-dropdown li{
	float: none;
	border-bottom: solid 1px #f8cc7b;
	padding-bottom: 3px;
	margin-bottom: 3px;
	}
#nav .has-dropdown li a{ 
	color: {{ settings.link_hover_colour }};
	padding: 4px;
	margin: 0;
	}
#nav .has-dropdown li a:hover{
	color: #2e8fc1;
	background: #ffeba8;
	}
	
.top-menu .dd-arrow{ /* css triangles: http://jonrohan.me/guide/css/creating-triangles-in-css/  */
	display: block;
	border-color: {{ settings.link_active_colour }} transparent transparent transparent;
  border-style: solid;
  border-width: 3px;
  height:0;
  width:0;
  position:absolute;
  right: 8px;
  top: 42%;
	}
.ie6 .dd-arrow{ display: none; }	
#nav a:hover .dd-arrow,
#nav a.active .dd-arrow{
	border-top-color: {{ settings.topmenu_colour }};
	}	
	
	
.top-menu .current a.root{
	color: #fff;
	}
.top-menu .current .dd-arrow{
	border-top-color: #fff;
	}	
	
#customer-controls{
	float: right;
	padding: 0;
	}
#customer-controls li{
	padding: 12px 10px 10px 10px;
	border-left: solid 1px {{ settings.header_colour }};
	} 
.cart-link a{
	background: url(icon-cart-white.png) 0 2px no-repeat;
	padding-left: 24px;
	padding-right: 5px;
	display: block;
	}
.ie6 .cart-link a{
	padding-left: 0;
	background-image: none;
	}
.ie6 #customer-controls .cart-link,
.ie7 #customer-controls .cart-link,
.ie8 #customer-controls .cart-link{ padding-top: 10px; }
	
	
	
/**
 * Homepage Carousel
 */	

/* Adjust this to alter the width and height of the carousel. */
#carousel, 
#carousel .items > li{
	width: 710px;
	height: {{ settings.carousel_height }}px;
	}

#carousel-wrapper{ margin: 0 0 15px 0; }

#carousel{
	position: relative;
	z-index: 50;
