	padding: 4px 8px;
	text-align: center;
	vertical-align: middle;
	}
tfoot th{ background: transparent; }

blockquote{
	font-style: italic;
	margin: 0 0 0 25px;
	}
		
input, textarea{
	border: solid 1px #aaa;
	padding: 4px;
	}
label{
